{
    "name": "chess-game-server",
    "description": "A gameServer based on NodeJS Pinus Framework",
    "version": "1.1.0",
    "private": false,
    "repository": {
        "type": "git"
    },
    "bin": {
        "$": "./dist/bin/app.js"
    },
    "main": "./dist/app",
    "scripts": {
        "start": "npm run build && cd dist &&  node app",
        "build": "node_modules/.bin/tsc",
        "test": "jest --coverage --runInBand --forceExit --reporters=default --reporters=jest-junit"
    },
    "jest-junit": {
        "outputName": "test-results.xml"
    },
    "dependencies": {
        "@ggoodman/fsm": "^0.1.1",
        "@types/bluebird": "^3.5.19",
        "@types/node": "8.10.54",
        "bluebird": "^3.5.1",
        "bufferutil": "^4.0.1",
        "crc": "0.2.0",
        "pinus": "1.4.14",
        "redis": "^3.1.2",
        "reflect-metadata": "^0.1.10",
        "source-map-support": "^0.5.0",
        "utf-8-validate": "^5.0.2",
        "uuid": "^7.0.3"
    },
    "devDependencies": {
        "@types/jest": "^27.0.1",
        "@types/redis": "^2.8.14",
        "cpy": "^6.0.0",
        "jest": "^27.2.0",
        "jest-junit": "^12.2.0",
        "ts-jest": "^27.0.5",
        "ts-node": "10.2.1",
        "tslint": "5.20.1",
        "typescript": "^4.3.5"
    }
}
